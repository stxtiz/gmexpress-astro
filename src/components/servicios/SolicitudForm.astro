---
import { db } from "../../firebase/client";
import { collection, getDocs, query, where } from "firebase/firestore";

interface Props {
  servicioPreseleccionado?: string;
}

const { servicioPreseleccionado } = Astro.props;

// Fetch dynamic services
let dynamicServices = [];
try {
  const q = query(
    collection(db, "services"), 
    where("hasPrice", "==", false),
    where("activo", "==", true)
  );
  const snapshot = await getDocs(q);
  dynamicServices = snapshot.docs.map(doc => doc.data().name);
} catch (error) {
  console.error("Error fetching services:", error);
  // Fallback to default services if fetch fails
  dynamicServices = [
    "Catering para Eventos",
    "Servicio de Cafetería",
    "Comedores Industriales",
    "Almuerzos Ejecutivos",
    "Vending Machines",
    "Asesoría Gastronómica"
  ];
}
---

<div
  class="bg-white dark:bg-slate-900 rounded-2xl shadow-xl border border-slate-200 dark:border-slate-800 p-8 md:p-10"
>
  <form id="solicitudForm" class="flex flex-col gap-6">
    <!-- Información del Servicio -->
    <div class="flex flex-col gap-4">
      <h2 class="text-2xl font-bold text-secondary dark:text-text-dark">
        Información del Servicio
      </h2>

      <!-- Tipo de Servicio -->
      <div class="flex flex-col gap-2">
        <label
          for="servicio"
          class="text-sm font-medium text-secondary dark:text-text-dark"
        >
          Tipo de Servicio <span class="text-red-500">*</span>
        </label>
        <select
          id="servicio"
          name="servicio"
          required
          class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all appearance-none cursor-pointer"
        >
          <option value="">Selecciona un servicio</option>
          {dynamicServices.map((servicio) => (
            <option
              value={servicio}
              selected={servicioPreseleccionado === servicio}
            >
              {servicio}
            </option>
          ))}
        </select>
      </div>

      <!-- Número de Personas -->
      <div class="flex flex-col gap-2">
        <label
          for="numeroPersonas"
          class="text-sm font-medium text-secondary dark:text-text-dark"
        >
          Número de Personas/Empleados <span class="text-red-500">*</span>
        </label>
        <input
          type="number"
          id="numeroPersonas"
          name="numeroPersonas"
          required
          min="1"
          placeholder="50"
          class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
        />
      </div>

      <!-- Fecha Estimada -->
      <div class="flex flex-col gap-2">
        <label
          for="fechaEstimada"
          class="text-sm font-medium text-secondary dark:text-text-dark"
        >
          Fecha Estimada de Inicio <span class="text-red-500">*</span>
        </label>
        <input
          type="date"
          id="fechaEstimada"
          name="fechaEstimada"
          required
          class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
        />
      </div>

      <!-- Descripción de Necesidades -->
      <div class="flex flex-col gap-2">
        <label
          for="descripcion"
          class="text-sm font-medium text-secondary dark:text-text-dark"
        >
          Describe tus necesidades <span class="text-red-500">*</span>
        </label>
        <textarea
          id="descripcion"
          name="descripcion"
          required
          rows="4"
          placeholder="Por favor detalla tus requerimientos específicos..."
          class="px-4 py-3 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
        ></textarea>
      </div>
    </div>

    <!-- Información de Contacto -->
    <div class="flex flex-col gap-4">
      <h2 class="text-2xl font-bold text-secondary dark:text-text-dark">
        Información de Contacto
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Nombre -->
        <div class="flex flex-col gap-2">
          <label
            for="nombre"
            class="text-sm font-medium text-secondary dark:text-text-dark"
          >
            Nombre Completo <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            placeholder="Juan Pérez"
            class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
          />
        </div>

        <!-- Empresa -->
        <div class="flex flex-col gap-2">
          <label
            for="empresa"
            class="text-sm font-medium text-secondary dark:text-text-dark"
          >
            Empresa <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="empresa"
            name="empresa"
            required
            placeholder="Mi Empresa S.A."
            class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
          />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Email -->
        <div class="flex flex-col gap-2">
          <label
            for="email"
            class="text-sm font-medium text-secondary dark:text-text-dark"
          >
            Correo Electrónico <span class="text-red-500">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="correo@empresa.com"
            class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
          />
        </div>

        <!-- Teléfono -->
        <div class="flex flex-col gap-2">
          <label
            for="telefono"
            class="text-sm font-medium text-secondary dark:text-text-dark"
          >
            Teléfono <span class="text-red-500">*</span>
          </label>
          <input
            type="tel"
            id="telefono"
            name="telefono"
            required
            placeholder="+56 9 1234 5678"
            class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
          />
        </div>
      </div>

      <!-- Ciudad -->
      <div class="flex flex-col gap-2">
        <label
          for="ciudad"
          class="text-sm font-medium text-secondary dark:text-text-dark"
        >
          Ciudad <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          id="ciudad"
          name="ciudad"
          required
          placeholder="Santiago"
          class="h-12 px-4 rounded-lg border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-secondary dark:text-text-dark placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
        />
      </div>
    </div>

    <!-- Botones -->
    <div class="flex flex-col sm:flex-row gap-4 pt-4">
      <button
        type="submit"
        class="flex-1 flex cursor-pointer items-center justify-center overflow-hidden rounded-full h-12 px-6 bg-primary text-white text-base font-bold tracking-wide hover:bg-primary/90 transition-all hover:shadow-lg"
      >
        <span class="material-symbols-outlined mr-2">send</span>
        <span class="truncate">Enviar Solicitud</span>
      </button>
      <a
        href="/servicios"
        class="flex-1 flex cursor-pointer items-center justify-center overflow-hidden rounded-full h-12 px-6 border-2 border-slate-300 dark:border-slate-700 text-secondary dark:text-text-dark text-base font-bold tracking-wide hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
      >
        <span class="truncate">Cancelar</span>
      </a>
    </div>
  </form>
</div>

<script>
  import { db } from "../../firebase/client";
  import { collection, addDoc, serverTimestamp } from "firebase/firestore";

  // ============================================
  // CONFIGURACIÓN DE TOASTS
  // ============================================
  const toastConfig = {
    success: {
      icon: `<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
      bgColor: "bg-green-50",
      borderColor: "border-green-400",
      textColor: "text-green-800"
    },
    danger: {
      icon: `<svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
      bgColor: "bg-red-50",
      borderColor: "border-red-400",
      textColor: "text-red-800"
    },
    warning: {
      icon: `<svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>`,
      bgColor: "bg-amber-50",
      borderColor: "border-amber-400",
      textColor: "text-amber-800"
    }
  };

  // ============================================
  // FUNCIÓN: Mostrar toast personalizado
  // Reemplaza alert() nativo
  // ============================================
  function showFormToast(
    message: string,
    type: "success" | "danger" | "warning" = "success"
  ): void {
    const { icon, bgColor, borderColor, textColor } = toastConfig[type];

    // Crear contenedor si no existe
    let container = document.getElementById("form-toast-container");
    if (!container) {
      container = document.createElement("div");
      container.id = "form-toast-container";
      container.style.cssText = "position:fixed;top:1rem;right:1rem;z-index:10000;display:flex;flex-direction:column;gap:0.5rem;";
      document.body.appendChild(container);
    }

    // Crear toast
    const toast = document.createElement("div");
    toast.className = `${bgColor} ${borderColor} border-l-4 rounded-lg shadow-lg p-4 max-w-md`;
    toast.style.cssText = "animation:slideInRight 0.3s ease-out;";
    toast.innerHTML = `
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0">${icon}</div>
        <div class="flex-1">
          <p class="${textColor} text-sm font-medium">${message}</p>
        </div>
        <button onclick="this.closest('div').parentElement.remove()" class="flex-shrink-0 text-gray-400 hover:text-gray-600">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>
    `;

    container.appendChild(toast);

    // Auto-remover después de 6 segundos
    setTimeout(() => {
      toast.style.animation = "slideOutRight 0.3s ease-in forwards";
      setTimeout(() => toast.remove(), 300);
    }, 6000);
  }

  // Agregar estilos de animación
  if (!document.getElementById("form-toast-styles")) {
    const style = document.createElement("style");
    style.id = "form-toast-styles";
    style.textContent = `
      @keyframes slideInRight { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
      @keyframes slideOutRight { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    `;
    document.head.appendChild(style);
  }

  // ============================================
  // FUNCIÓN: Sanitizar texto para prevenir XSS
  // ============================================
  function sanitizeText(input: string): string {
    if (!input) return "";
    return input
      .replace(/<[^>]*>/g, "")           // Elimina tags HTML
      .replace(/&/g, "&amp;")            // Escapa &
      .replace(/</g, "&lt;")             // Escapa <
      .replace(/>/g, "&gt;")             // Escapa >
      .replace(/"/g, "&quot;")           // Escapa "
      .replace(/'/g, "&#x27;")           // Escapa '
      .replace(/[\x00-\x1F\x7F]/g, "")   // Elimina caracteres de control
      .trim();
  }

  // ============================================
  // FUNCIÓN: Detectar contenido XSS en texto
  // ============================================
  function containsXSS(input: string): boolean {
    if (!input) return false;
    const lower = input.toLowerCase();
    return /<script[\s\S]*?>|javascript:|on\w+\s*=/i.test(lower) ||
           /<(iframe|object|embed|form|meta|link|style)/i.test(lower) ||
           lower.includes('<script') ||
           lower.includes('javascript:') ||
           lower.includes('onerror=') ||
           lower.includes('onclick=');
  }

  // Manejar envío del formulario
  const form = document.getElementById("solicitudForm");
  const submitBtn = form?.querySelector("button[type='submit']") as HTMLButtonElement | null;
  const originalBtnContent = submitBtn?.innerHTML;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    if (!submitBtn) return;

    // Obtener datos del formulario
    const formData = new FormData(form as HTMLFormElement);
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    const data: Record<string, any> = {};

    formData.forEach((value, key) => {
      data[key] = value;
    });

    // ============================================
    // VALIDACIÓN XSS ANTES DE GUARDAR
    // ============================================
    const textFieldsToValidate = [
      { key: "nombre", label: "Nombre" },
      { key: "empresa", label: "Empresa" },
      { key: "descripcion", label: "Descripción de necesidades" },
      { key: "ciudad", label: "Ciudad" }
    ];

    for (const field of textFieldsToValidate) {
      if (data[field.key] && containsXSS(data[field.key] as string)) {
        showFormToast(
          `Error en Cotización: Se han detectado caracteres no permitidos en el campo "${field.label}". Por favor usa solo texto normal.`,
          "danger"
        );
        return;
      }
    }

    // Loading state
    submitBtn.disabled = true;
    submitBtn.innerHTML = `<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Enviando...`;

    try {
      // Guardar datos sanitizados en Firestore
      await addDoc(collection(db, "solicitudes"), {
        servicio: data.servicio,
        numeroPersonas: parseInt(data.numeroPersonas as string, 10),
        fechaEstimada: data.fechaEstimada,
        descripcion: sanitizeText(data.descripcion as string),
        nombre: sanitizeText(data.nombre as string),
        empresa: sanitizeText(data.empresa as string),
        email: data.email,
        telefono: data.telefono,
        ciudad: sanitizeText(data.ciudad as string),
        fecha: new Date().toISOString().split('T')[0],
        createdAt: serverTimestamp(),
        estado: "Pendiente",
        id: `SOL-${Date.now().toString().slice(-6)}`
      });

      // Crear notificación para el admin
      await addDoc(collection(db, "notifications"), {
        title: "Nueva Solicitud de Cotización",
        message: `Nueva solicitud de ${sanitizeText(data.servicio as string)} por ${sanitizeText(data.nombre as string)} (${sanitizeText(data.empresa as string)})`,
        type: "warning",
        read: false,
        createdAt: serverTimestamp()
      });

      // Éxito - Toast en lugar de alert
      showFormToast(
        "¡Solicitud de Cotización Enviada! Nos pondremos en contacto contigo en las próximas 24 horas.",
        "success"
      );

      // Redirigir después de mostrar el toast
      setTimeout(() => {
        window.location.href = "/servicios";
      }, 2000);
    } catch (error) {
      console.error("Error al enviar solicitud:", error);
      showFormToast(
        "Error en Cotización: No pudimos enviar tu solicitud. Por favor intenta nuevamente.",
        "danger"
      );
    } finally {
      // Reset button
      submitBtn.disabled = false;
      if (originalBtnContent) submitBtn.innerHTML = originalBtnContent;
    }
  });
</script>
