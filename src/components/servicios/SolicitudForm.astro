---
import { db } from "../../firebase/client";
import { collection, getDocs, query, where } from "firebase/firestore";

interface Props {
  servicioPreseleccionado?: string;
}

const { servicioPreseleccionado } = Astro.props;

// Fetch dynamic services
let dynamicServices = [];
try {
  const q = query(
    collection(db, "services"), 
    where("hasPrice", "==", false),
    where("activo", "==", true)
  );
  const snapshot = await getDocs(q);
  dynamicServices = snapshot.docs.map(doc => doc.data().name);
} catch (error) {
  console.error("Error fetching services:", error);
  // Fallback to default services if fetch fails
  dynamicServices = [
    "Catering para Eventos",
    "Servicio de Cafetería",
    "Comedores Industriales",
    "Almuerzos Ejecutivos",
    "Vending Machines",
    "Asesoría Gastronómica"
  ];
}
