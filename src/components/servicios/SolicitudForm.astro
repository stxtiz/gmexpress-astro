<script>
  import { db } from "../../firebase/client";
  import { collection, addDoc, serverTimestamp } from "firebase/firestore";

  // ============================================
  // CONFIGURACIÓN DE VALIDACIÓN
  // Homologada con el formulario de registro
  // ============================================
  const VALIDATION_CONFIG = {
    nombre: { minLength: 3, maxLength: 100, label: "Nombre Completo" },
    empresa: { minLength: 2, maxLength: 100, label: "Empresa" },
    email: { maxLength: 100, label: "Correo Electrónico" },
    telefono: { minLength: 8, maxLength: 20, label: "Teléfono" },
    ciudad: { minLength: 2, maxLength: 50, label: "Ciudad" },
    descripcion: { minLength: 20, maxLength: 1000, label: "Descripción de necesidades" },
    numeroPersonas: { min: 1, max: 10000, label: "Número de Personas" }
  };

  // ============================================
  // PATRONES DE DETECCIÓN XSS
  // Detecta inyección de scripts y HTML peligroso
  // Homologados con el formulario de registro
  // ============================================
  const XSS_PATTERNS = {
    SCRIPT_INJECTION: /<script[\s\S]*?>[\s\S]*?<\/script>|javascript:|on\w+\s*=/gi,
    HTML_INJECTION: /<[^>]*(iframe|object|embed|form|input|button|meta|link|style)[^>]*>/gi,
    EVENT_HANDLERS: /\bon\w+\s*=\s*["']?[^"']*["']?/gi,
    DATA_URLS: /data:\s*[^,]*;base64/gi,
    EXPRESSIONS: /expression\s*\(/gi
  };

  // ============================================
  // CONFIGURACIÓN DE TOASTS
  // ============================================
  const toastConfig = {
    success: {
      icon: `<svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
      title: "Éxito",
      bgColor: "bg-green-50",
      textColor: "text-green-800",
      borderClass: "toast-success"
    },
    info: {
      icon: `<svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
      title: "Información",
      bgColor: "bg-blue-50",
      textColor: "text-blue-800",
      borderClass: "toast-info"
    },
    warning: {
      icon: `<svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>`,
      title: "Advertencia",
      bgColor: "bg-amber-50",
      textColor: "text-amber-800",
      borderClass: "toast-warning"
    },
    danger: {
      icon: `<svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
      title: "Error",
      bgColor: "bg-red-50",
      textColor: "text-red-800",
      borderClass: "toast-danger"
    }
  };

  // ============================================
  // FUNCIÓN: Mostrar toast personalizado
  // Homologada con el formulario de registro
  // ============================================
  function showToast(
    message: string,
    type: "success" | "info" | "warning" | "danger" = "info"
  ): void {
    const { icon, title, bgColor, textColor, borderClass } = toastConfig[type];

    // Crear contenedor de toasts si no existe
    let toastContainer = document.getElementById("toast-container");
    if (!toastContainer) {
      toastContainer = document.createElement("div");
      toastContainer.id = "toast-container";
      document.body.appendChild(toastContainer);
    }

    // Crear el toast
    const toastId = `toast-${Date.now()}`;
    const toastEl = document.createElement("div");
    toastEl.id = toastId;
    toastEl.className = `toast ${borderClass}`;
    toastEl.style.animation = "slideInRight 0.3s ease-out";
    toastEl.innerHTML = `
      <div class="p-4 ${bgColor}">
        <div class="flex items-start gap-3">
          <div class="flex-shrink-0">${icon}</div>
          <div class="flex-1">
            <p class="font-semibold ${textColor}">${title}</p>
            <p class="text-sm text-gray-600 mt-1">${message}</p>
          </div>
          <button onclick="this.closest('.toast').remove()" class="flex-shrink-0 text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          </button>
        </div>
      </div>
    `;

    toastContainer.appendChild(toastEl);

    // Auto-remover después de 5 segundos
    setTimeout(() => {
      toastEl.style.animation = "slideOutRight 0.3s ease-in";
      setTimeout(() => toastEl.remove(), 300);
    }, 5000);
  }

  // ============================================
  // FUNCIÓN: Mostrar errores de validación en modal
  // Homologada con el formulario de registro
  // ============================================
  function showValidationErrors(errors: string[]): void {
    // Remover modal existente si hay
    const existingModal = document.getElementById("validation-modal-overlay");
    if (existingModal) existingModal.remove();

    const overlay = document.createElement("div");
    overlay.id = "validation-modal-overlay";
    overlay.className = "validation-modal-overlay";
    overlay.innerHTML = `
      <div class="validation-modal">
        <div class="bg-red-50 px-6 py-4 border-b border-red-100">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-red-800">Error en Solicitud de Cotización</h3>
          </div>
        </div>
        <div class="px-6 py-4 max-h-60 overflow-y-auto">
          <p class="text-gray-600 text-sm mb-3">Por favor corrige los siguientes errores:</p>
          <ul class="space-y-2">
            ${errors.map(error => `
              <li class="flex items-start gap-2 p-2 bg-red-50 rounded-lg">
                <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span class="text-sm text-gray-700">${error}</span>
              </li>
            `).join("")}
          </ul>
        </div>
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
          <button id="close-validation-modal" class="w-full py-2.5 px-4 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors">
            Entendido
          </button>
        </div>
      </div>
    `;

    document.body.appendChild(overlay);

    // Event listeners para cerrar
    document.getElementById("close-validation-modal")?.addEventListener("click", () => overlay.remove());
    overlay.addEventListener("click", (e) => {
      if (e.target === overlay) overlay.remove();
    });

    // Cerrar con Escape
    const handleEscape = (e: KeyboardEvent) => {
      if (e.key === "Escape") {
        overlay.remove();
        document.removeEventListener("keydown", handleEscape);
      }
    };
    document.addEventListener("keydown", handleEscape);
  }

  // ============================================
  // FUNCIÓN: Limpiar errores de campos
  // ============================================
  function clearFieldErrors(): void {
    document.querySelectorAll(".field-error").forEach((el) => {
      el.classList.remove("field-error");
    });
  }

  // ============================================
  // FUNCIÓN: Marcar campo con error
  // ============================================
  function markFieldError(elementId: string): void {
    const element = document.getElementById(elementId);
    if (element) element.classList.add("field-error");
  }

  // ============================================
  // FUNCIÓN: Sanitizar texto para prevenir XSS
  // Homologada con el formulario de registro
  // ============================================
  function sanitizeText(input: string): string {
    if (!input) return "";
    return input
      .replace(/<[^>]*>/g, "")           // Elimina tags HTML
      .replace(/&/g, "&amp;")            // Escapa &
      .replace(/</g, "&lt;")             // Escapa <
      .replace(/>/g, "&gt;")             // Escapa >
      .replace(/"/g, "&quot;")           // Escapa "
      .replace(/'/g, "&#x27;")           // Escapa '
      .replace(/[\x00-\x1F\x7F]/g, "")   // Elimina caracteres de control
      .trim();
  }

  // ============================================
  // FUNCIÓN: Detectar contenido XSS en texto
  // Homologada con el formulario de registro
  // ============================================
  function containsXSS(input: string): boolean {
    if (!input) return false;
    const lowerInput = input.toLowerCase();
    return XSS_PATTERNS.SCRIPT_INJECTION.test(lowerInput) || 
           XSS_PATTERNS.HTML_INJECTION.test(lowerInput) ||
           XSS_PATTERNS.EVENT_HANDLERS.test(lowerInput) ||
           XSS_PATTERNS.DATA_URLS.test(lowerInput) ||
           XSS_PATTERNS.EXPRESSIONS.test(lowerInput) ||
           lowerInput.includes('<script') ||
           lowerInput.includes('javascript:') ||
           lowerInput.includes('onerror=') ||
           lowerInput.includes('onclick=') ||
           lowerInput.includes('onload=') ||
           lowerInput.includes('onmouseover=');
  }

  // ============================================
  // FUNCIÓN: Validar campo de texto contra XSS
  // Homologada con el formulario de registro
  // ============================================
  function validateTextFieldXSS(
    value: string, 
    fieldName: string
  ): { isValid: boolean; error?: string } {
    if (containsXSS(value)) {
      return { 
        isValid: false, 
        error: `Error de Seguridad: Se han detectado caracteres no permitidos en el campo "${fieldName}". Por favor usa solo texto normal.`
      };
    }
    return { isValid: true };
  }

  // ============================================
  // FUNCIÓN: Validar formato de email
  // ============================================
  function validateEmail(email: string): boolean {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }

  // ============================================
  // FUNCIÓN: Validar formato de teléfono chileno
  // ============================================
  function validatePhone(phone: string): boolean {
    // Acepta formatos: +56912345678, 912345678, +56 9 1234 5678
    const cleanPhone = phone.replace(/\s/g, "");
    return cleanPhone.length >= 8 && /^(\+?56)?[0-9]{8,12}$/.test(cleanPhone);
  }

  // ============================================
  // ELEMENTOS DEL DOM
  // ============================================
  const form = document.getElementById("solicitudForm") as HTMLFormElement | null;
  const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement | null;
  const originalBtnContent = submitBtn?.innerHTML;

  // ============================================
  // FUNCIÓN: Estado de carga del botón
  // Homologada con el formulario de registro
  // ============================================
  function setLoadingState(loading: boolean): void {
    if (!submitBtn) return;
    if (loading) {
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <svg class="animate-spin -ml-1 mr-2 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>Enviando solicitud...</span>
      `;
    } else {
      submitBtn.disabled = false;
      if (originalBtnContent) submitBtn.innerHTML = originalBtnContent;
    }
  }

  // ============================================
  // MANEJADOR DE ENVÍO DEL FORMULARIO
  // ============================================
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    clearFieldErrors();

    // ============================================
    // OBTENER VALORES DE LOS CAMPOS
    // ============================================
    const servicioSelect = document.getElementById("servicio") as HTMLSelectElement;
    const numeroPersonasInput = document.getElementById("numeroPersonas") as HTMLInputElement;
    const fechaEstimadaInput = document.getElementById("fechaEstimada") as HTMLInputElement;
    const descripcionInput = document.getElementById("descripcion") as HTMLTextAreaElement;
    const nombreInput = document.getElementById("nombre") as HTMLInputElement;
    const empresaInput = document.getElementById("empresa") as HTMLInputElement;
    const emailInput = document.getElementById("email") as HTMLInputElement;
    const telefonoInput = document.getElementById("telefono") as HTMLInputElement;
    const ciudadInput = document.getElementById("ciudad") as HTMLInputElement;

    // ============================================
    // VALIDACIÓN DE CAMPOS OBLIGATORIOS
    // ============================================
    const allErrors: string[] = [];

    const requiredFields = [
      { element: servicioSelect, id: "servicio", name: "Tipo de Servicio" },
      { element: numeroPersonasInput, id: "numeroPersonas", name: "Número de Personas" },
      { element: fechaEstimadaInput, id: "fechaEstimada", name: "Fecha Estimada" },
      { element: descripcionInput, id: "descripcion", name: "Descripción de necesidades" },
      { element: nombreInput, id: "nombre", name: "Nombre Completo" },
      { element: empresaInput, id: "empresa", name: "Empresa" },
      { element: emailInput, id: "email", name: "Correo Electrónico" },
      { element: telefonoInput, id: "telefono", name: "Teléfono" },
      { element: ciudadInput, id: "ciudad", name: "Ciudad" }
    ];

    requiredFields.forEach((field) => {
      if (!field.element?.value?.trim()) {
        allErrors.push(`El campo "${field.name}" es obligatorio.`);
        markFieldError(field.id);
      }
    });

    // Si hay campos vacíos, mostrar errores y detener
    if (allErrors.length > 0) {
      showValidationErrors(allErrors);
      return;
    }

    // ============================================
    // VALIDACIONES DE FORMATO
    // ============================================
    
    // Validar email
    if (!validateEmail(emailInput.value)) {
      allErrors.push("Correo electrónico inválido. Verifique el formato (ej: correo@empresa.com).");
      markFieldError("email");
    }

    // Validar teléfono
    if (!validatePhone(telefonoInput.value)) {
      allErrors.push("Teléfono inválido. Use formato chileno (ej: +56912345678 o 912345678).");
      markFieldError("telefono");
    }

    // Validar número de personas
    const numPersonas = parseInt(numeroPersonasInput.value, 10);
    if (isNaN(numPersonas) || numPersonas < 1 || numPersonas > 10000) {
      allErrors.push("Número de personas debe ser entre 1 y 10,000.");
      markFieldError("numeroPersonas");
    }

    // Validar longitud de descripción
    if (descripcionInput.value.trim().length < 20) {
      allErrors.push("La descripción debe tener al menos 20 caracteres para que podamos entender tus necesidades.");
      markFieldError("descripcion");
    }

    // Validar longitud de nombre
    if (nombreInput.value.trim().length < 3) {
      allErrors.push("El nombre debe tener al menos 3 caracteres.");
      markFieldError("nombre");
    }

    // Validar fecha estimada no sea en el pasado
    const fechaEstimada = new Date(fechaEstimadaInput.value);
    const hoy = new Date();
    hoy.setHours(0, 0, 0, 0);
    if (fechaEstimada < hoy) {
      allErrors.push("La fecha estimada no puede ser en el pasado.");
      markFieldError("fechaEstimada");
    }

    // Si hay errores de formato, mostrar y detener
    if (allErrors.length > 0) {
      showValidationErrors(allErrors);
      return;
    }

    // ============================================
    // VALIDACIÓN XSS - ANTES DE CUALQUIER OPERACIÓN
    // Esto previene guardar contenido malicioso
    // ============================================
    const textFieldsToValidate = [
      { value: nombreInput.value, name: "Nombre Completo", id: "nombre" },
      { value: empresaInput.value, name: "Empresa", id: "empresa" },
      { value: descripcionInput.value, name: "Descripción de necesidades", id: "descripcion" },
      { value: ciudadInput.value, name: "Ciudad", id: "ciudad" }
    ];

    const xssErrors: string[] = [];
    for (const field of textFieldsToValidate) {
      if (field.value) {
        const xssValidation = validateTextFieldXSS(field.value, field.name);
        if (!xssValidation.isValid && xssValidation.error) {
          xssErrors.push(xssValidation.error);
          markFieldError(field.id);
        }
      }
    }

    // Si hay errores de XSS, detener ANTES de guardar
    if (xssErrors.length > 0) {
      showValidationErrors(xssErrors);
      return;
    }

    // ============================================
    // ENVIAR SOLICITUD A FIREBASE
    // ============================================
    setLoadingState(true);

    try {
      // Construir fecha local
      const now = new Date();
      const day = String(now.getDate()).padStart(2, '0');
      const month = String(now.getMonth() + 1).padStart(2, '0');
      const year = now.getFullYear();
      const fechaLocal = `${year}-${month}-${day}`;

      // Guardar datos sanitizados en Firestore
      await addDoc(collection(db, "solicitudes"), {
        servicio: servicioSelect.value,
        numeroPersonas: numPersonas,
        fechaEstimada: fechaEstimadaInput.value,
        descripcion: sanitizeText(descripcionInput.value),
        nombre: sanitizeText(nombreInput.value),
        empresa: sanitizeText(empresaInput.value),
        email: emailInput.value.trim().toLowerCase(),
        telefono: telefonoInput.value.trim(),
        ciudad: sanitizeText(ciudadInput.value),
        fecha: fechaLocal,
        createdAt: serverTimestamp(),
        estado: "Pendiente",
        id: `SOL-${Date.now().toString().slice(-6)}`
      });

      // Crear notificación para el admin
      await addDoc(collection(db, "notifications"), {
        title: "Nueva Solicitud de Cotización",
        message: `Nueva solicitud de ${sanitizeText(servicioSelect.value)} por ${sanitizeText(nombreInput.value)} (${sanitizeText(empresaInput.value)})`,
        type: "warning",
        read: false,
        createdAt: serverTimestamp()
      });

      // Éxito
      showToast(
        "¡Solicitud enviada exitosamente! Nos pondremos en contacto contigo en las próximas 24 horas.",
        "success"
      );

      // Redirigir después de mostrar el toast
      setTimeout(() => {
        window.location.href = "/servicios";
      }, 2000);

    } catch (error) {
      console.error("Error al enviar solicitud:", error);
      setLoadingState(false);
      showToast(
        "Error en Solicitud de Cotización: No pudimos enviar tu solicitud. Por favor intenta nuevamente.",
        "danger"
      );
    }
  });
</script>
