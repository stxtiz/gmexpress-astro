---
/**
 * ============================================
 * GMEXPRESS - COMPONENTE SERVICE GRID
 * ============================================
 *
 * Grid responsivo que muestra las tarjetas de servicios.
 * Ahora incluye ID para funcionalidad del carrito.
 */

import ServiceCard from "./ServiceCard.astro";

interface Props {
  services: {
    id: string; // ID del documento en Firestore
    name: string;
    description: string;
    image: string;
    alt: string;
    price?: string;
    priceLabel?: string;
    hasPrice: boolean;
  }[];
}

const { services } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
  {
    services.map((servicio) => (
      <ServiceCard
        id={servicio.id}
        name={servicio.name}
        description={servicio.description}
        image={servicio.image}
        alt={servicio.alt}
        price={servicio.price}
        priceLabel={servicio.priceLabel}
        hasPrice={servicio.hasPrice}
      />
    ))
  }
</div>
