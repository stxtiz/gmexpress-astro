---
import ProductCard from "./ProductCard.astro";

interface Props {
  products: {
    name: string;
    price: string;
    image: string;
    alt: string;
    description: string;
  }[];
}

const { products } = Astro.props;
---

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  {products.map((product) => <ProductCard {...product} />)}
</div>
