    // ============================================
    // FUNCIÓN: Guardar servicio
    // Valida todos los campos antes de guardar en Firestore
    // ============================================
    window.saveServicio = async function () {
      // Obtener valores del formulario
      const nombre = (document.getElementById("nombre") as HTMLInputElement)
        .value;
      const descripcion = (
        document.getElementById("descripcion") as HTMLTextAreaElement
      ).value;
      const imagen = (document.getElementById("imagen") as HTMLInputElement)
        .value;
      const alt = (document.getElementById("alt") as HTMLInputElement).value;
      const hasPrice = (document.getElementById("hasPrice") as HTMLInputElement)
        .checked;
      const activo = (document.getElementById("activo") as HTMLInputElement)
        .checked;

      let precioRaw = "";
      let priceLabel = "";

      if (hasPrice) {
        precioRaw = (document.getElementById("precio") as HTMLInputElement)
          .value;
        priceLabel = (document.getElementById("priceLabel") as HTMLInputElement)
          .value;
      }

      // ============================================
      // VALIDACIÓN COMPLETA DEL SERVICIO
      // Ejecutar todas las validaciones antes de guardar
      // ============================================
      const validationResult = validateServicio({
        nombre,
        descripcion,
        imagen,
        alt,
        hasPrice,
        precioRaw,
        priceLabel,
      });

      // Si hay errores de validación, mostrarlos y no continuar
      if (!validationResult.isValid) {
        showValidationErrors(validationResult.errors);
        console.warn(
          "[VALIDACIÓN] Errores encontrados:",
          validationResult.errors,
        );
        return;
      }

      // ============================================
      // SANITIZACIÓN DE DATOS
      // Limpiar y formatear los datos validados
      // ============================================
      let precio = "";
      let priceLabelSanitized = "";

      if (hasPrice) {
        const precioValidado = validatePrice(precioRaw);
        precio = "$" + precioValidado.value.toLocaleString("es-CL");
        priceLabelSanitized = sanitizeText(priceLabel);
      }

      // Construir objeto de servicio con datos sanitizados
      const servicioData = {
        name: sanitizeText(nombre),
        description: sanitizeText(descripcion),
        image: imagen.trim(), // URL ya validada
        alt: sanitizeText(alt),
        hasPrice: Boolean(hasPrice),
        price: precio,
        priceLabel: priceLabelSanitized,
        activo: Boolean(activo),
        updatedAt: new Date(),
        createdAt: null as Date | null,
      };

      // ============================================
      // GUARDAR EN FIRESTORE
      // Crear o actualizar según el contexto
      // ============================================
      try {
        if (editingId) {
          // Modo edición: actualizar documento existente
          // eslint-disable-next-line @typescript-eslint/no-unused-vars
