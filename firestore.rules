rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // FUNCIONES HELPER DE SEGURIDAD
    // ============================================
    
    // Verifica si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Verifica si el usuario es administrador
    // Requiere: usuario autenticado + documento en /users con role='admin'
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Verifica si el usuario es el propietario del documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // FUNCIONES DE VALIDACIÓN DE DATOS
    // Prevenir inyección de datos maliciosos
    // ============================================

    // Valida que un string no exceda el límite de caracteres
    // @param value - El valor a validar
    // @param maxLength - Longitud máxima permitida
    function isValidStringLength(value, maxLength) {
      return value is string && value.size() <= maxLength;
    }

    // Valida que un string tenga una longitud mínima
    // @param value - El valor a validar
    // @param minLength - Longitud mínima requerida
    function hasMinLength(value, minLength) {
      return value is string && value.size() >= minLength;
    }

    // Valida que un número esté dentro de un rango
    // @param value - El número a validar
    // @param min - Valor mínimo permitido
    // @param max - Valor máximo permitido
    function isInRange(value, min, max) {
      return value is number && value >= min && value <= max;
    }

    // Valida que un número no sea negativo
    // @param value - El número a validar
    function isNonNegative(value) {
      return value is number && value >= 0;
    }

    // Valida que un número sea un entero positivo
    // @param value - El número a validar
    function isPositiveInteger(value) {
      return value is int && value >= 0;
    }

    // Valida que una URL sea válida (http/https)
    // Nota: Firestore rules no soporta regex completo, 
    // validación básica por prefijo
    // @param url - La URL a validar
    function isValidUrl(url) {
      return url is string && 
             url.size() <= 2048 &&
             (url.matches('^https://.*') || url.matches('^http://.*'));
    }

    // Valida que un string no contenga patrones peligrosos
    // Detecta intentos de inyección de script
    // @param value - El valor a validar
    function isSafeString(value) {
      return value is string &&
             !value.lower().matches('.*<script.*') &&
             !value.lower().matches('.*javascript:.*') &&
             !value.lower().matches('.*onerror.*') &&
             !value.lower().matches('.*onclick.*') &&
             !value.lower().matches('.*onload.*');
    }

    // ============================================
    // COLECCIÓN: products
    // Lectura pública, escritura solo admin con validación
    // Excepción: usuarios autenticados pueden decrementar stock al comprar
    // ============================================
    match /products/{productId} {
      allow read: if true;
      
      // Solo admin puede crear/eliminar productos
      allow create: if isAdmin() && isValidProduct(request.resource.data);
      allow delete: if isAdmin();
      
      // Admin puede actualizar todo, usuarios autenticados solo pueden decrementar stock
      allow update: if isAdmin() && isValidProduct(request.resource.data)
                    || (isAuthenticated() && isStockDecrement());
      
      // Función para validar que solo se está decrementando el stock
      function isStockDecrement() {
        // Solo se puede modificar el campo stock
        return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock'])
          // El nuevo stock debe ser menor que el actual (decrementar)
          && request.resource.data.stock < resource.data.stock
          // El stock no puede ser negativo
          && request.resource.data.stock >= 0;
      }
      
      // Función de validación para productos
      // Valida todos los campos requeridos y sus restricciones
      // NOTA: La categoría ya no se valida contra whitelist fija
      // Se valida en el cliente contra la colección categories
      function isValidProduct(data) {
        return data.keys().hasAll(['name', 'categoria', 'description', 'price', 'stock', 'image', 'alt', 'activo', 'destacado']) &&
               // Validar nombre: string, 3-100 caracteres, seguro
               data.name is string &&
               hasMinLength(data.name, 3) &&
               isValidStringLength(data.name, 100) &&
               isSafeString(data.name) &&
               // Validar categoría: string, 2-50 caracteres, seguro (validación dinámica)
               data.categoria is string &&
               hasMinLength(data.categoria, 2) &&
               isValidStringLength(data.categoria, 50) &&
               isSafeString(data.categoria) &&
               // Validar descripción: string, 10-1000 caracteres, seguro
               data.description is string &&
               hasMinLength(data.description, 10) &&
               isValidStringLength(data.description, 1000) &&
               isSafeString(data.description) &&
               // Validar precio: string formateado ($X.XXX)
               data.price is string &&
               isValidStringLength(data.price, 20) &&
               // Validar stock: entero no negativo, máximo 999999
               isPositiveInteger(data.stock) &&
               isInRange(data.stock, 0, 999999) &&
               // Validar URL de imagen
               isValidUrl(data.image) &&
               // Validar texto alternativo: string, 5-200 caracteres, seguro
               data.alt is string &&
               hasMinLength(data.alt, 5) &&
               isValidStringLength(data.alt, 200) &&
               isSafeString(data.alt) &&
               // Validar campos booleanos
               data.activo is bool &&
               data.destacado is bool;
      }
    }

    // ============================================
    // COLECCIÓN: categories
    // Lectura pública, escritura solo admin
    // ============================================
    match /categories/{categoryId} {
      // Lectura pública para que los selectores puedan cargar las categorías
      allow read: if true;
      
      // Solo admin puede crear/modificar/eliminar categorías
      allow create: if isAdmin() && isValidCategory(request.resource.data);
      allow update: if isAdmin() && isValidCategory(request.resource.data);
      allow delete: if isAdmin();
      
      // Función de validación para categorías
      // Valida el nombre y previene inyección de código
      function isValidCategory(data) {
        return data.keys().hasAll(['name', 'createdAt', 'createdBy']) &&
               // Validar nombre: string, 2-50 caracteres, seguro
               data.name is string &&
               hasMinLength(data.name, 2) &&
               isValidStringLength(data.name, 50) &&
               isSafeString(data.name) &&
               // Validar createdBy: debe ser el UID del admin que crea
               data.createdBy is string &&
               data.createdBy == request.auth.uid;
      }
    }

    // ============================================
    // COLECCIÓN: services
    // Lectura pública, escritura solo admin con validación
    // ============================================
    match /services/{serviceId} {
      allow read: if true;
      
      // Solo admin puede crear/modificar/eliminar servicios
      // Con validaciones de seguridad en los datos
      allow create: if isAdmin() && isValidService(request.resource.data);
      allow update: if isAdmin() && isValidService(request.resource.data);
      allow delete: if isAdmin();
      
      // Función de validación para servicios
      // Valida todos los campos requeridos y sus restricciones
      function isValidService(data) {
        return data.keys().hasAll(['name', 'description', 'image', 'alt', 'hasPrice', 'activo']) &&
               // Validar nombre: string, 5-150 caracteres, seguro
               data.name is string &&
               hasMinLength(data.name, 5) &&
               isValidStringLength(data.name, 150) &&
               isSafeString(data.name) &&
               // Validar descripción: string, 20-2000 caracteres, seguro
               data.description is string &&
               hasMinLength(data.description, 20) &&
               isValidStringLength(data.description, 2000) &&
               isSafeString(data.description) &&
               // Validar URL de imagen
               isValidUrl(data.image) &&
               // Validar texto alternativo: string, 5-200 caracteres, seguro
               data.alt is string &&
               hasMinLength(data.alt, 5) &&
               isValidStringLength(data.alt, 200) &&
               isSafeString(data.alt) &&
               // Validar campo hasPrice: booleano
               data.hasPrice is bool &&
               // Validar precio si hasPrice es true
               (data.hasPrice == false || (
                 data.price is string &&
                 isValidStringLength(data.price, 20)
               )) &&
               // Validar priceLabel si existe
               (!('priceLabel' in data.keys()) || 
                (data.priceLabel is string && isValidStringLength(data.priceLabel, 50))) &&
               // Validar campo activo: booleano
               data.activo is bool;
      }
    }

    // ============================================
    // COLECCIÓN: users
    // - Lectura: propietario o admin
    // - Creación: cualquier autenticado (registro) o admin
    // - Actualización: propietario (datos propios) o admin (cualquier usuario)
    // - Eliminación: solo admin
    // ============================================
    match /users/{userId} {
      // Lectura: el usuario puede ver su propio perfil, admin puede ver todos
      allow read: if isOwner(userId) || isAdmin();
      
      // Creación: usuario autenticado puede crear su propio documento
      // Admin puede crear cualquier usuario
      allow create: if (isAuthenticated() && request.auth.uid == userId && isValidUserData(request.resource.data, false))
                    || (isAdmin() && isValidUserData(request.resource.data, true));
      
      // Actualización: usuario puede actualizar su perfil (excepto rol)
      // Admin puede actualizar cualquier usuario incluyendo rol
      allow update: if (isOwner(userId) && isValidUserUpdate(request.resource.data, resource.data, false))
                    || (isAdmin() && isValidUserUpdate(request.resource.data, resource.data, true));
      
      // Eliminación: solo admin puede eliminar usuarios
      allow delete: if isAdmin();
      
      // ============================================
      // Función de validación para creación de usuarios
      // @param data - Datos del nuevo usuario
      // @param isAdminCreating - Si es admin quien crea (puede asignar cualquier rol)
      // ============================================
      function isValidUserData(data, isAdminCreating) {
        return data.keys().hasAll(['firstName', 'lastNamePaterno', 'lastNameMaterno', 'rut', 'email', 'phone', 'address', 'region', 'comuna', 'role']) &&
               // Validar nombre: string, 2-50 caracteres, seguro
               data.firstName is string &&
               hasMinLength(data.firstName, 2) &&
               isValidStringLength(data.firstName, 50) &&
               isSafeString(data.firstName) &&
               // Validar apellido paterno: string, 2-50 caracteres, seguro
               data.lastNamePaterno is string &&
               hasMinLength(data.lastNamePaterno, 2) &&
               isValidStringLength(data.lastNamePaterno, 50) &&
               isSafeString(data.lastNamePaterno) &&
               // Validar apellido materno: string, 2-50 caracteres, seguro
               data.lastNameMaterno is string &&
               hasMinLength(data.lastNameMaterno, 2) &&
               isValidStringLength(data.lastNameMaterno, 50) &&
               isSafeString(data.lastNameMaterno) &&
               // Validar RUT: string, formato chileno (10-12 caracteres con puntos y guión)
               data.rut is string &&
               hasMinLength(data.rut, 9) &&
               isValidStringLength(data.rut, 12) &&
               // Validar email: string, máximo 100 caracteres
               data.email is string &&
               hasMinLength(data.email, 5) &&
               isValidStringLength(data.email, 100) &&
               // Validar teléfono: string, formato chileno
               data.phone is string &&
               hasMinLength(data.phone, 9) &&
               isValidStringLength(data.phone, 20) &&
               // Validar dirección: string, 5-200 caracteres, seguro
               data.address is string &&
               hasMinLength(data.address, 5) &&
               isValidStringLength(data.address, 200) &&
               isSafeString(data.address) &&
               // Validar región: string, 3-100 caracteres
               data.region is string &&
               hasMinLength(data.region, 3) &&
               isValidStringLength(data.region, 100) &&
               // Validar comuna: string, 3-100 caracteres
               data.comuna is string &&
               hasMinLength(data.comuna, 3) &&
               isValidStringLength(data.comuna, 100) &&
               // Validar apartment si existe (opcional)
               (!('apartment' in data.keys()) || 
                (data.apartment is string && isValidStringLength(data.apartment, 50))) &&
               // Validar rol: solo 'user' o 'admin'
               // Usuarios normales solo pueden tener rol 'user'
               // Admin puede asignar cualquier rol válido
               data.role in ['user', 'admin'] &&
               (isAdminCreating || data.role == 'user');
      }
      
      // ============================================
      // Función de validación para actualización de usuarios
      // @param newData - Nuevos datos del usuario
      // @param oldData - Datos actuales del usuario
      // @param isAdminUpdating - Si es admin quien actualiza
      // ============================================
      function isValidUserUpdate(newData, oldData, isAdminUpdating) {
        return isValidUserData(newData, isAdminUpdating) &&
               // El email no puede cambiar (está vinculado a Auth)
               newData.email == oldData.email &&
               // Solo admin puede cambiar el rol
               (isAdminUpdating || newData.role == oldData.role);
      }
    }

    // ============================================
    // COLECCIÓN: solicitudes (cotizaciones)
    // Creación pública, gestión solo admin
    // ============================================
    match /solicitudes/{solicitudId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // ============================================
    // COLECCIÓN: pedidos (órdenes de compra)
    // - Creación: cualquier usuario autenticado (su propio pedido)
    // - Lectura: propietario del pedido o admin
    // - Actualización/Eliminación: solo admin
    // ============================================
    match /pedidos/{pedidoId} {
      // Cualquier usuario autenticado puede crear un pedido
      // Solo validamos que el userId coincida con el usuario autenticado
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // El usuario puede leer sus propios pedidos, admin puede leer todos
      allow read: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Solo admin puede actualizar estado de pedidos
      allow update: if isAdmin();
      
      // Solo admin puede eliminar pedidos
      allow delete: if isAdmin();
    }

    // ============================================
    // COLECCIÓN: notifications
    // Creación pública (eventos del sistema), gestión admin
    // ============================================
    match /notifications/{notificationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // ============================================
    // REGLA POR DEFECTO: denegar todo lo demás
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
